# - In PHP Versions <= 7.4 MySQL8 is not supported du to lacking pdo support

# Possible values: php72, php74, php80
PHPVERSION=php80
DOCUMENT_ROOT=./src

# Possible values: mysql
DATABASE=mysql

MYSQL_USER=test
MYSQL_PASSWORD=111
MYSQL_ROOT_PASSWORD=111
MYSQL_DATABASE=homestead

# Config
PHP_INI=../../docker-core/config/php/php.ini
OPCACHE_INI=../../docker-core/config/php/opcache.ini
APACHE_LOG_DIR=../../docker-core/logs/apache2
NGINX_CNF=../../docker-core/config/nginx/default.conf
VHOSTS_DIR=../../docker-core/config/vhosts

MYSQL_DATA_DIR=./local-database/mysql
MYSQL_LOG_DIR=../../docker-core/logs/mysql
MYSQL_CNF=../../docker-core/config/mysql/custom.cnf

# Ports
HOST_MACHINE_UNSECURE_HOST_PORT=80
HOST_MACHINE_SECURE_HOST_PORT=443

HOST_MACHINE_PHPMYADMIN_PORT=8081
HOST_MACHINE_REDIS_PORT=6379
HOST_MACHINE_MYSQL_PORT=3306

